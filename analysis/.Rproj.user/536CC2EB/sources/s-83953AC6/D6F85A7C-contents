
design <- 
  declare_model(
    N = 20,
    X1 = rnorm(N),
    X2 = rnorm(N),
    Y = X1 - X2 + rnorm(N)
  ) +
  declare_inquiry(
    x1 = 1, 
    x2 = -1, 
    interaction = 0) +
  declare_estimator(Y ~ X1*X2, model = lm_robust, 
                    term = c("X1:X2", "X1", "X2"),
                    inquiry = c("interaction", "x1", "x2"))

diagnosis <- diagnose_design(design, sims = 10)    